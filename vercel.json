{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "env": {
        "FLASK_APP": "api/index.py",
        "FLASK_ENV": "production",
        "PYTHONPATH": "."
    },
    "redirects": [{ "source": "/", "destination": "/api" }]
}